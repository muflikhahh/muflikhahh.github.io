        screenshot: "https://via.placeholder.com/600x400?text=Landing+Page+App"
    }
];

// Fungsi untuk membuat elemen HTML Portofolio
function createPortfolioItem(item) {
    const itemDiv = document.createElement('div');
    itemDiv.classList.add('portfolio-item');
    
    // Interaksi: Menampilkan alert saat item diklik
    itemDiv.onclick = () => {
        alert(`Anda melihat detail proyek: ${item.name}\nDeskripsi: ${item.description}\nTech Stack: ${item.techStack.join(', ')}`);
    };

    const techStackHtml = item.techStack.map(tech => `<span>${tech}</span>`).join('');

    itemDiv.innerHTML = `
        <img src="${item.screenshot}" alt="Screenshot Proyek ${item.name}" class="project-screenshot">
        <div class="project-details">
            <h3>${item.name}</h3>
            <p>${item.description}</p>
            <div class="tech-stack">${techStackHtml}</div>
        </div>
    `;

    return itemDiv;
}

// Menambahkan item portofolio ke DOM
document.addEventListener('DOMContentLoaded', () => {
    const portfolioGrid = document.getElementById('portfolio-items');
    
    portfolioData.forEach(item => {
        const itemElement = createPortfolioItem(item);
        portfolioGrid.appendChild(itemElement);
    });

    // JavaScript Interaktif Tambahan: Smooth Scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
});
